CC ?= gcc

CFLAGS ?= -O2 -g -std=gnu99

tempflags :=
tempflags += -Werror
tempflags += -Wall
tempflags += -pedantic
tempflags += -Wtraditional
tempflags += -W
tempflags += -Wimplicit
tempflags += -Wmain
tempflags += -Wparentheses
tempflags += -Wreturn-type
tempflags += -Wunused
tempflags += -Wswitch
tempflags += -Wcomment
tempflags += -Wformat
tempflags += -Wchar-subscripts
tempflags += -Wuninitialized
tempflags += -Wshadow
tempflags += -Wpointer-arith
tempflags += -Wcast-qual
tempflags += -Wcast-align
tempflags += -Wwrite-strings
tempflags += -Wconversion
tempflags += -Waggregate-return
tempflags += -Wstrict-prototypes
tempflags += -Wmissing-prototypes
tempflags += -Wmissing-declarations
tempflags += -Wredundant-decls
tempflags += -Wnested-externs
tempflags += -Winline
strictflags ?= $(tempflags)

flags ?= $(CFLAGS) $(strictflags)
		

