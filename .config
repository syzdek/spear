CC ?= gcc

# C Compile Flags
ctemp :=
ctemp += -O2
ctemp += -std=gnu99
CFLAGS ?= $(ctemp)

# Debug flags to pass to GCC
DEBUGLEVEL ?= 5 
debugtemp :=
debugtemp += -g$(DEBUGLEVEL)
debugtemp += -ggdb$(DEBUGLEVEL)
debugtemp += -Q
debugtemp += -ftime-report
debugtime += -fmem-report
debugtemp += -fprofile-arcs
DEBUGFLAGS ?= $(debugtemp)

# Warning flags to pass to GCC
OBJECTLEN ?= 1024
warningtemp :=
warningtemp += -Werror 
warningtemp += -Wall 
warningtemp += -pedantic 
warningtemp += -Wtraditional 
warningtemp += -W 
warningtemp += -Wchar-subscripts
warningtemp += -Wcomment
#warningtemp += -Wformat
warningtemp += -Wformat=2
warningtemp += -Wimplicit 
warningtemp += -Wmain 
warningtemp += -Wmissing-braces
warningtemp += -Wparentheses 
warningtemp += -Wsequence-point
warningtemp += -Wreturn-type 
warningtemp += -Wswitch 
warningtemp += -Wtrigraphs
warningtemp += -Wunused 
warningtemp += -Wuninitialized 
warningtemp += -Wdiv-by-zero
warningtemp += -Wmultichar
warningtemp += -Wfloat-equal
warningtemp += -Wundef
warningtemp += -Wshadow
warningtemp += -Wlarger-than-$(OBJECTLEN)
warningtemp += -Wpointer-arith
warningtemp += -Wbad-function-cast
warningtemp += -Wcast-qual 
warningtemp += -Wcast-align 
warningtemp += -Wwrite-strings 
warningtemp += -Wconversion 
warningtemp += -Waggregate-return 
warningtemp += -Wstrict-prototypes 
warningtemp += -Wmissing-prototypes 
warningtemp += -Wmissing-declarations 
warningtemp += -Wmissing-noreturn
warningtemp += -Wmissing-format-attribute
warningtemp += -Wpacked
warningtemp += -Wpadded
warningtemp += -Wredundant-decls 
warningtemp += -Wnested-externs 
warningtemp += -Wunreachable-code
warningtemp += -Winline
warningtemp += -Wdisabled-optimization
WARNINGFLAGS ?= $(warningtemp)

flags ?= $(CFLAGS) $(DEBUGFLAGS) $(WARNINGFLAGS)
		

